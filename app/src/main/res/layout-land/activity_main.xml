<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.kaya.connectus2.ui.MainActivity"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageButton
        android:id="@+id/reminderButton"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:tint="@color/colorPrimaryText"
        app:srcCompat="@drawable/reminder"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/calendarButton"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="68dp"
        app:layout_constraintLeft_toLeftOf="@+id/calendarButton"
        app:layout_constraintTop_toTopOf="@+id/symptomSearchButton"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ImageButton
        android:id="@+id/symptomSearchButton"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:tint="@color/colorPrimaryText"
        app:srcCompat="@drawable/search"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/noteButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/noteButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="69dp"/>

    <ImageButton
        android:id="@+id/noteButton"
        android:layout_width="77dp"
        android:layout_height="73dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="112dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/symptomSearchButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96"
        app:srcCompat="@drawable/pencil2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <ImageButton
        android:id="@+id/calendarButton"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="45dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:tint="@color/colorPrimaryText"
        app:layout_constraintBottom_toTopOf="@+id/reminderButton"
        app:layout_constraintRight_toLeftOf="@+id/mainTitleTV"
        app:srcCompat="@drawable/calendar"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toTopOf="@+id/noteButton"
        android:layout_marginTop="8dp"
        android:layout_marginRight="45dp"
        app:layout_constraintVertical_bias="1.0"/>

<TextView
    android:id="@+id/mainTitleTV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ConnectUs"
    android:textColor="@android:color/holo_green_dark"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintRight_toLeftOf="@+id/noteButton"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    android:layout_marginEnd="57dp"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginRight="0dp"/>


</android.support.constraint.ConstraintLayout>