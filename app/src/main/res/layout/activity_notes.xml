<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaya.connectus2.ui.NotesActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use notes to record important information about your symptoms, appointments, or questions or your doctor"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/questionButton"

    />


    <EditText
        android:id="@+id/noteEditText"
        android:layout_width="368dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPersonName|textNoSuggestions"
        android:text="Enter note"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toTopOf="@+id/saveNoteButton"
       />

    <Button
        android:id="@+id/saveNoteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        />

    <RadioButton
        android:id="@+id/symptomButton"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:text="Symptom"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/appoinmentNoteButton"/>

    <RadioButton
        android:id="@+id/appoinmentNoteButton"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:text="Appointment"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginBottom="127dp"
        app:layout_constraintBottom_toTopOf="@+id/noteEditText"/>

    <RadioButton
        android:id="@+id/questionButton"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Question"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/symptomButton"/>

</android.support.constraint.ConstraintLayout>
