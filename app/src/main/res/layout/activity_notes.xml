<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaya.connectus2.ui.NotesActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/gradient"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:id="@+id/noteBodyTV"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Enter note"
        android:inputType="textPersonName|textNoSuggestions"
        android:selectAllOnFocus="false"
        app:layout_constraintBottom_toTopOf="@+id/saveNoteButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/noteTitleET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/noteBodyTV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/saveNoteButton"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_marginBottom="58dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="Save Note"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="489dp"/>

    <Button
        android:id="@+id/allNotesButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="518dp"
        android:background="@color/colorAccent"
        android:text="View All Notes"
        android:textColor="@color/colorTextIcons"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/photoButtton"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:background="@color/colorPrimaryDark"
        android:text="Attach image"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="62dp"
        android:layout_marginLeft="52dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/noteImageView"
        android:layout_width="88dp"
        android:layout_height="82dp"
        app:srcCompat="@drawable/ic_camera_alt_black_24dp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="69dp"/>

</android.support.constraint.ConstraintLayout>
