<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaya.connectus2.ui.NotesActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/gradient"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/allNotesButton"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="0dp"
        android:text="All Notes"
        android:textColor="@color/colorTextIcons"
        android:textSize="12sp"
        android:visibility="visible"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="14dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/noteTitleET"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:layout_marginEnd="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="8dp"/>

    <Button
        android:id="@+id/saveNoteButton"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimaryDark"
        android:text="Save Note"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/photoButtton"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:background="@color/colorPrimaryDark"
        android:text="Attach image"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/noteBodyTV"/>

    <ImageView
        android:id="@+id/noteImageView"
        android:layout_width="88dp"
        android:layout_height="82dp"
        app:srcCompat="@drawable/ic_camera_alt_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="214dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.304"/>

    <EditText
        android:id="@+id/noteBodyTV"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Note"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/noteTitleET"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>
