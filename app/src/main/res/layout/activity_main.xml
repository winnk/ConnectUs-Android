<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.kaya.connectus2.ui.MainActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/reminderButton"
        android:layout_width="68dp"
        android:layout_height="67dp"
        android:scaleType="centerCrop"
        android:tint="@color/colorPrimaryText"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/reminder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"
        />

    <ImageButton
        android:id="@+id/symptomSearchButton"
        android:layout_width="71dp"
        android:layout_height="66dp"
        android:layout_marginEnd="88dp"
        android:scaleType="centerCrop"
        android:tint="@color/colorPrimaryText"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/search"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/noteButton"
        android:layout_width="66dp"
        android:layout_height="0dp"
        android:layout_marginStart="76dp"
        android:scaleType="centerCrop"
        android:tint="@android:color/black"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/pencil2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/calendarButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calendarButton"/>

    <ImageButton
        android:id="@+id/calendarButton"
        android:layout_width="65dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:tint="@color/colorPrimaryText"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="134dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/symptomSearchButton"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="94dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/mainTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ConnectUs"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="40dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
