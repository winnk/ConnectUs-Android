<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaya.connectus2.MainActivity">

    <ImageButton
        android:id="@+id/reminderButton"
        android:layout_width="68dp"
        android:layout_height="67dp"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="155dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/noteButton"
        android:layout_marginLeft="103dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageButton
        android:id="@+id/symptomSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        app:srcCompat="@android:drawable/ic_search_category_default"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="155dp"
        app:layout_constraintLeft_toRightOf="@+id/reminderButton"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ImageButton
        android:id="@+id/noteButton"
        android:layout_width="71dp"
        android:layout_height="66dp"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="264dp"/>

    <ImageButton
        android:id="@+id/calendarButton"
        android:layout_width="65dp"
        android:layout_height="64dp"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/symptomSearchButton"
        app:layout_constraintLeft_toRightOf="@+id/noteButton"
        android:layout_marginLeft="48dp"/>
</android.support.constraint.ConstraintLayout>
