<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.kaya.connectus2.ui.MainActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/reminderButton"
        android:layout_width="68dp"
        android:layout_height="67dp"
        android:layout_marginTop="140dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:tint="@color/colorSecondaryText"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/reminder"
        />

    <ImageButton
        android:id="@+id/symptomSearchButton"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:layout_marginEnd="88dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:tint="@color/colorPrimaryText"
        app:srcCompat="@drawable/search"
        android:layout_marginTop="115dp"
        app:layout_constraintTop_toBottomOf="@+id/noteButton"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/calendarButton"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/noteButton"
        android:layout_width="60dp"
        android:layout_height="64dp"
        android:layout_marginStart="31dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:tint="@android:color/black"
        app:srcCompat="@drawable/pencil2"
        android:layout_marginRight="96dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/reminderButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp" />

    <ImageButton
        android:id="@+id/calendarButton"
        android:layout_width="68dp"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="115dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/symptomSearchButton"
        app:layout_constraintTop_toBottomOf="@+id/reminderButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/calendar"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/mainTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="ConnectUs"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />


</android.support.constraint.ConstraintLayout>
