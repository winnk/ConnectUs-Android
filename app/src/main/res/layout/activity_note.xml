<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaya.connectus2.ui.NotesActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/gradient"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/allNotesButton"


        android:layout_width="124dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="46dp"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="All Notes"
        android:textColor="#C6F5D9"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="446dp"/>


    <EditText
        android:id="@+id/noteTitleET"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/saveNoteButton"
        android:layout_width="124dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Save Note"
        android:textColor="#C6F5D9"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="244dp"/>

    <ImageView
        android:id="@+id/noteImageView"
        android:layout_width="52dp"
        android:layout_height="53dp"
        android:layout_marginBottom="71dp"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:drawable/picture_frame"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/noteBodyTV"
        app:layout_constraintVertical_bias="1.0"/>

    <EditText
        android:id="@+id/noteBodyTV"
        android:layout_width="364dp"
        android:layout_height="297dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:hint="Note"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteTitleET"
        android:layout_marginStart="11dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="49dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        app:layout_constraintRight_toLeftOf="@+id/noteImageView"
        android:layout_marginRight="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="74dp"/>

</android.support.constraint.ConstraintLayout>
