<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaya.connectus2.ui.NotesListActivity">


<RelativeLayout
    android:layout_width="368dp"
    android:layout_height="495dp"

    tools:context=".ui.NotesListActivity"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No Search Results Found. Go back and try a different search!"
        android:id="@+id/noResultsTextView"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="40dp"
        android:textColor="@color/material_grey_850"
        android:layout_marginBottom="76dp"
        android:layout_alignBottom="@+id/recyclerView"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />


</RelativeLayout>


</android.support.constraint.ConstraintLayout>